<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_vertical|fill_horizontal"
    android:background="@drawable/volalk_gradc_activity"
    tools:context=".VolAlkGradCActivity">


    <Button
        android:id="@+id/calcAlcTemp"
        style="@android:style/Widget.Button"
        android:layout_width="308dp"
        android:layout_height="47dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#45524c"
        android:elevation="0dp"
        android:fontFamily="@font/caudex_italic"
        android:text="Berechnen"
        android:textColor="#cbc498"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.71000004" />

    <TextView
        android:id="@+id/sollTemp"
        android:layout_width="52dp"
        android:layout_height="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:lineSpacingExtra="12sp"
        android:singleLine="false"
        android:text="20"
        android:textAlignment="center"
        android:textColor="#7a887f"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.972"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.014" />

    <EditText
        android:id="@+id/istTemp"
        android:layout_width="69dp"
        android:layout_height="39dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:lineSpacingExtra="12sp"
        android:singleLine="false"
        android:text="18"
        android:textAlignment="center"
        android:textColor="#505452"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.781"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38" />

    <EditText
        android:id="@+id/scheinAlk"
        android:layout_width="67dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:lineSpacingExtra="12sp"
        android:singleLine="false"
        android:text="45"
        android:textAlignment="center"
        android:textColor="#505452"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.435" />

    <TextView
        android:id="@+id/wahrAlk"
        android:layout_width="74dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:lineSpacingExtra="12sp"
        android:singleLine="false"
        android:textAlignment="center"
        android:textColor="#c2d3c9"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.516" />

    <TextView
        android:id="@+id/TempDiff"
        android:layout_width="69dp"
        android:layout_height="39dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:lineSpacingExtra="12sp"
        android:singleLine="false"
        android:text="25"
        android:textAlignment="center"
        android:textColor="#505452"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/TempDiff_calc"
        android:layout_width="69dp"
        android:layout_height="39dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:lineSpacingExtra="12sp"
        android:singleLine="false"
        android:text="25"
        android:textAlignment="center"
        android:textColor="#505452"
        android:textSize="18sp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="39dp" />

    <TextView
        android:id="@+id/calc"
        android:layout_width="69dp"
        android:layout_height="39dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:lineSpacingExtra="12sp"
        android:singleLine="false"
        android:text="25"
        android:textAlignment="center"
        android:textColor="#505452"
        android:textSize="18sp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="76dp" />
</android.support.constraint.ConstraintLayout>